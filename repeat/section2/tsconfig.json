{
  // 타입스크립트 컴파일러 tsc가
  // 어떤 폴더 안에있는 타입스크립트 파일들을 컴파일할건지
  "include": ["src"],
  "compilerOptions": {
    // 컴파일 후 변환되는 자바스크립트 코드가 사용할 자바스크립트의 버전
    "target": "ESNext",
    // 변환되는 자바스크립트 코드가 사용할 모듈 시스템
    "module": "ESNext",
    // 컴파일된 자바스크립트 파일이 저장될 위치
    "outDir": "dist",
    // 타입스크립트 엄격 모드
    "strict": true,
    // 자동으로 모든 타입스크립트 파일들을 개별 모듈로 취급
    "moduleDetection": "force"
  },
  "ts-node": {
    "esm": true
  }
}
